<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_join_lobby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:fillViewport="true"
    tools:context=".ui.lobby.JoinLobbyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/app_logo_named"
            app:layout_constraintBottom_toTopOf="@id/input_room_code"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <!-- Room Code input — identical structure to login inputs.
             Errors displayed via TextInputLayout.setError() which turns the
             outline red automatically, matching the login screen behaviour. -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_room_code"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/label_room_code"
            app:counterEnabled="true"
            app:counterMaxLength="6"
            app:endIconMode="none"
            app:layout_constraintBottom_toTopOf="@id/card_join"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_logo">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_room_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:maxLength="6"
                android:maxLines="1" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Primary "Join" button — matches Home screen Create Lobby button style -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_join"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/color_surface"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toTopOf="@id/card_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_room_code">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/btn_join"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:backgroundTint="@color/color_primary"
                app:cornerRadius="50dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Secondary "Back" button — matches Home screen Join Lobby button style (outlined) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/color_surface"
            app:cardCornerRadius="50dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_join">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/btn_back"
                android:textColor="@color/color_primary"
                android:textSize="18sp"
                app:backgroundTint="@color/color_surface"
                app:cornerRadius="50dp"
                app:strokeColor="@color/color_primary"
                app:strokeWidth="2dp" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
