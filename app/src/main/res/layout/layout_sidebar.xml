<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sidebar_menu"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="@color/color_surface"
    android:elevation="16dp"
    android:orientation="vertical">

    <!-- Close button row -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        android:paddingEnd="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar_btn_close"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp"
            app:icon="@drawable/close_icon"
            app:iconSize="28dp"
            app:iconTint="@color/color_text_primary" />
    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_text_secondary"
        android:alpha="0.2" />

    <!-- Navigation items (fills remaining space) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:gravity="top">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar_btn_home"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_nav_home"
            android:textColor="@color/color_primary"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar_btn_favorites"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_nav_favorites"
            android:textColor="@color/color_text_secondary"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar_btn_watchlist"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_nav_watchlist"
            android:textColor="@color/color_text_secondary"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar_btn_movies"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_nav_movies"
            android:textColor="@color/color_text_secondary"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp" />

        <!-- Sign Out -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sidebar_btn_signout"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sidebar_nav_signout"
            android:textColor="@color/color_logout_tint"
            android:textSize="15sp"
            android:textAlignment="textStart"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <!-- Divider above user profile -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color_text_secondary"
        android:alpha="0.2" />

    <!-- User profile & avatar -->
    <LinearLayout
        android:id="@+id/sidebar_user_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="12dp"
        android:paddingTop="16dp"
        android:paddingBottom="35dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/sidebar_image_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/label_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/default_user_avatar3" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sidebar_text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_primary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Guest User" />

            <TextView
                android:id="@+id/sidebar_text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="user@example.com" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
