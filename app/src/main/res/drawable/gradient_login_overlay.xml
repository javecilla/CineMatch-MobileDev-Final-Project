<?xml version="1.0" encoding="utf-8"?>
<!-- gradient_login_overlay.xml
     Attached to the login form container so it moves upwards alongside the form
     when the software keyboard appears. Stronger dark tones shifted higher. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <gradient
        android:angle="270"
        android:startColor="#00000000"
        android:centerColor="#D9000000"
        android:endColor="#FA000000"
        android:centerY="0.3" />
</shape>
